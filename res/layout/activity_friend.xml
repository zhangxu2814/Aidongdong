<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >

    <LinearLayout
        android:id="@+id/ll_title"
        android:layout_width="fill_parent"
        android:layout_height="48dp"
        android:layout_alignParentLeft="true"
        android:background="@drawable/icon_title_friend"
        android:gravity="center_horizontal"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/tv_MyRequests"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="6"
            android:text="  新的朋友"
            android:textColor="#FF9A28"
            android:textSize="10pt"
            android:visibility="gone" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_weight="11"
            android:gravity="center"
            android:text="好友"
            android:textSize="12pt"
            android:visibility="gone" />

        <TextView
            android:id="@+id/tv_add"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="15"
            android:gravity="center"
            android:text="  +"
            android:textColor="#FF9A28"
            android:textSize="12pt"
            android:visibility="gone" />

        <Button
            android:id="@+id/btn_newfriend"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="6"
            android:background="@null"
             />

        <Button
            android:id="@+id/btn_add"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="6"
            android:background="@null"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone" >

        <Button
            android:id="@+id/btn_radar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="雷达" />

        <Button
            android:id="@+id/btn_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="折线图" />

        <Button
            android:id="@+id/btn_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="通讯录好友" />
    </LinearLayout>

    <ImageView
        android:id="@+id/iv_friendcom"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/ll_title"
        android:src="@drawable/icon_friendcommunity" />

    <include
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        layout="@layout/ll_menu_buttom" />

    <View
        android:id="@+id/vw1"
        android:layout_width="fill_parent"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true" />

    <ListView
        android:id="@+id/lv_f"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/vw1"
        android:layout_below="@+id/iv_friendcom" >
    </ListView>

</RelativeLayout>